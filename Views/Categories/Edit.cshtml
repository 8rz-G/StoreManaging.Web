@model StoreManaging.Web.Models.Entities.Category

@if (Model is null)
{
	<p>Category not found!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="int" class="form-control" asp-for="CategoryId" readonly />
		</div>
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name"/>
		</div>
		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description"/>
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>

			<button type="submit" class="btn btn-danger ms3" asp-action="Delete" asp-controller="Categories">Delete</button>
		</div>
	</form>
}
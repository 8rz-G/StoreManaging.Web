@model List<StoreManaging.Web.Models.Entities.Category>

<h3>Categories</h3>

<table class="table">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-dark" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-dark" asp-controller="Categories" asp-action="Add">Add new category</a>

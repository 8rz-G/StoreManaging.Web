@model StoreManaging.Web.Models.Entities.Product

<h3>Add new product</h3>

<form method="post">
	<div class="mt-3">

		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Category</label>
		@Html.DropDownList("Category", ViewBag.Categories, "--Select Category--", new {@class = "form-control" })
	</div>
	<div class="mt-3">

		<label class="form-label">Quantity</label>
		<input type="text" class="form-control" asp-for="Quantity" />
	</div>
	<div class="mt-3">

		<label class="form-label">Price</label>
		<input type="text" class="form-control" asp-for="Price" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>

@model StoreManaging.Web.Models.Entities.Products

<h3>Add new product</h3>

<form method="post">
	<div class="mt-3">

		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Category</label>
		<div class="row form-group p-4 border m-2">
			<select asp-for="Category" class="form-select" id="CategoryId" 
					asp-items="@ViewBag.categories"></select>
		</div>
		@* <input type="text" class="form-control" asp-for="Category" /> *@
	</div>
	<div class="mt-3">

		<label class="form-label">Quantity</label>
		<input type="text" class="form-control" asp-for="Quantity" />
	</div>
	<div class="mt-3">

		<label class="form-label">Price</label>
		<input type="text" class="form-control" asp-for="Price" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>

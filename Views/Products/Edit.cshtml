@model StoreManaging.Web.Models.Entities.Products

@if (Model is null)
{
	<p>Product not found!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="int" class="form-control" asp-for="Id" readonly />
		</div>
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<label class="form-label">Category</label>
			@Html.DropDownList("Category", ViewBag.Categories, "--Select Category--", new { @class = "form-control" })
		</div>
		<div class="mt-3">
			<label class="form-label">Quantity on stock</label>
			<input type="text" class="form-control" asp-for="Quantity" />
		</div>
		<div class="mt-3">
			<label class="form-label">Price</label>
			<input type="text" class="form-control" asp-for="Price" />
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>

			<button type="submit" class="btn btn-danger ms3" asp-action="Delete" asp-controller="Products">Delete</button>
		</div>
	</form>
}